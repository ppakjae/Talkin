<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindIdActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E2E2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="40dp"
        android:paddingHorizontal="40dp"
        android:background="#F7F7F7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/name_g"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/name_g"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/name_g">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="성명"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실명을 입력해주세요."
                    android:textColor="#363636"
                    android:textSize="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/mail_g"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mail_g"/>


            <EditText
                android:id="@+id/mail_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mail_g"
                android:hint="이메일"
                android:textSize="12dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnTransfer"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="인증번호 전송"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold"
            android:background="@drawable/round_solid_black_background"
            android:elevation="5dp"
            android:layout_gravity="center_horizontal"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="20dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="15dp"
                android:background="#E2E2E2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호가 오지 않는다면?"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_centerInParent="true" />

        </RelativeLayout>


        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="이메일을 정확하게 입력하셨는지,\n스팸 메일로 등록되어 있는지 확인해주세요!"
            android:textSize="10dp"
            android:textColor="#5E5E5E"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/mail_check_g"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mail_check_g"/>

            <EditText
                android:id="@+id/mail_check_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mail_check_g"
                android:hint="인증번호 6자리 입력"
                android:textSize="12dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="인증하기"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold"
            android:background="@drawable/round_solid_black_background"
            android:elevation="5dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</LinearLayout>