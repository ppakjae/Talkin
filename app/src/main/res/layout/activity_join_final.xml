<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinFinalActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutR1"
        android:layout_width="match_parent"
        android:layout_height="89.5dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="18dp"
            android:layout_above="@id/vLine1"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txtPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_above="@id/vLine1"/>

        <View
            android:id="@+id/vLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E2E2E2" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="94.5dp"
        android:layout_marginBottom="137.6dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/pw_checked" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center">

            <View
                android:layout_width="120dp"
                android:layout_height="23dp"
                android:background="#E2E2E2"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="환영합니다!"
                android:textColor="#000000"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반갑습니다. 최지희님, \n회원가입이 완료되었습니다."
            android:layout_gravity="center"
            android:layout_marginTop="49.7dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="67.3dp"
            android:background="@drawable/buttonenroll"
            android:gravity="center"
            android:text="로그인하기"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>