<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/id_g"
        android:layout_marginTop="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="146dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/edtId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="아이디"
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorTextBlack"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:background="@drawable/round_stroke_gray_backgorund"
        android:drawableLeft="@drawable/edittext_left_custom_id"
        android:paddingLeft="15dp"
        android:layout_below="@+id/imgLogo"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/edtPw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="비밀번호"
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorTextBlack"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:background="@drawable/round_stroke_gray_backgorund"
        android:drawableLeft="@drawable/edittext_left_custom_pw"
        android:paddingLeft="15dp"
        android:layout_below="@+id/edtId"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/imgKeep"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/login_unchecked"
        android:scaleType="centerCrop"
        android:layout_below="@+id/edtPw"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 상태 유지"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/imgKeep"
        android:layout_below="@+id/edtPw"
        android:layout_marginTop="35dp"/>
    
    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="로그인"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/round_solid_gray_background"

        android:layout_below="@+id/txtState"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="25dp"
        android:elevation="5dp"/>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray"
        android:layout_below="@+id/txtLogin"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#5E5E5E"
         android:layout_below="@+id/vDivider"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp" />

    <View
        android:id="@+id/vDivider2"
        android:layout_width="2dp"
        android:layout_height="15dp"
        android:background="#5E5E5E"
        android:layout_toRightOf="@+id/txtId"
        android:layout_below="@+id/vDivider"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/txtPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#5E5E5E"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_toRightOf="@+id/vDivider2"
        android:layout_below="@+id/vDivider"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    
    <TextView
        android:id="@+id/txtJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#5E5E5E"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@+id/vDivider"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"/>

    

</RelativeLayout>